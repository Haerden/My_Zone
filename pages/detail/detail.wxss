/* pages/detail/detail.wxss */

.container1 {
  background-color: #f5f5f5;
  width: 100%;
}

.head {
  display: flex;
  background-color: #fff;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.shadow {
  color: #fff;
}

.author {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.head image {
  margin-top:40rpx; 
  width: 200rpx;
  height: 300rpx;
  box-shadow:2px 2px 3px #e3e3e3;
}

.sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}
.sub-mark {
  background-color:  #ffa31a;
  color:#fff;
  border-radius: 2px; 
  padding:4rpx 12rpx; 
  align-items: center;  
  justify-content: center;
  font-size:27rpx; 

}
.comment-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  flex-wrap: wrap;
  padding: 0 30rpx;
  /* z-index: 999; */
}

.content {
  text-indent: 58rpx; 
  font-size: 30rpx;
  color: #495060;
  line-height: 55rpx;
}


.headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  /* margin-top:30rpx; */
  margin-bottom: 20rpx;
}



.posting-container {
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* width:690rpx; */
  background-color: #fff;
  width: 100%;
  z-index: 999;
}

.share-btn {
  margin-top: 28rpx;
  margin-left: 10rpx;
}

.share {
  /* padding:10rpx; */
  width: 40rpx;
  height: 40rpx;
}

.posting-container .comment-container {
  width: 690rpx;
  padding: 0 30rpx;
}

.post-header {
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.post-header > text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.cancel {
  color: #666;
}

.post-header text {
  padding: 25rpx;
}

.num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}

.comment-container > tag-cmp:first-child view {
  background-color: #fffbdd;
}


.tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 15px !important;
}


.posting-container .comment-container {
  padding: 40rpx 30rpx 0 30rpx;
}

.detail-contaner {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.vertical-1 {
  align-items: flex-end;
}

.description {
  color: #999;
  margin-right: 30rpx;
}

.tip {
  margin-top: 20rpx;
  width: 694rpx;
  height: 130rpx;
  margin-bottom: 30rpx;
}
